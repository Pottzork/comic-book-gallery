@{
    Layout = "~/Views/Shared/_Layout.cshtml"; //Link to the file including html code.
    ViewBag.Title = "Comic Book Detail"; //sets the name of the "tab-bar"


}

<h1>@ViewBag.SeriesTitle</h1>
<h2>Issue #@ViewBag.IssueNumber</h2>

<h5>Description:</h5>
<div>@Html.Raw(ViewBag.Description)</div>

@if (ViewBag.Artists.Length > 0)
{
    <h5>Artists:</h5>
    <div>
        <ul>
            @foreach (var artist in ViewBag.Artists)
            {
                <li>@artist</li>

            }
        </ul>
    </div>
}
